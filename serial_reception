void setup() {
  // Initialisation de la communication série à 9600 bauds
  Serial.begin(9600);
  // Initialisation de la communication série pour le moniteur série (USB)
  Serial1.begin(9600);
}

void loop() {
  // Vérifie si des données sont disponibles sur la liaison série (RX)
  if (Serial1.available() > 0) {
    // Lecture des données reçues
    int receivedString = Serial1.read();
    // Affichage des données reçues sur le moniteur série (via USB)
    Serial.println(receivedString);
  }
}
